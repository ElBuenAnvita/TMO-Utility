{
  "manifest_version": 3,
  "name": "TMO Utility",
  "description": "Utilidades para el lector de ZonaTMO (TuMangaOnline)",
  "version": "1.1",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/news/*/cascade",
        "*://*/news/*/paginated/*",
        "https://zonatmo.com/viewer/*/cascade",
        "https://zonatmo.com/viewer/*/paginated",
        "https://zonatmo.com/viewer/*/paginated/*"
      ],
      "js": [ "content.js" ]
    }
  ]
}
